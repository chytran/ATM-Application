@{
    ViewData["Title"] = "Home Page";
    string[] TableHeaders = new string[] {"id"
      ,"name"
      ,"amount"};
}

<div class="min-vh-100 w-100">
    <div class="logo w-75 h-25">
        Wells Fargo
    </div>
    <div class="w-100 h-75 flex-column d-flex p-2 justify-content-center align-self-center">
        <div class="information-container">
            <h1>Please enter your PIN</h1>
            <input name="pin-input"/>
            <h2>Please use the KEY PAD to enter Pin</h2>
        </div>
        <img src="" alt="keypad-image"/>
    </div>
</div>

<div class="table">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                @{
                    foreach(var head in TableHeaders)
                    {
                        <th>
                            @head
                        </th>
                    }
                }
            </tr>
        </thead>
        @{
            if(Model != null)
            {
                foreach(var Data in Model)
                {
                    <tr>
                        <td>@Data.id</td>
                        <td>@Data.name</td>
                        <td>@Data.amount</td>
                    </tr>  
                }
                
            }
        }
        <tbody>

        </tbody>
    </table>
</div>
